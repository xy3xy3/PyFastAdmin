# ==============================
# 基础应用配置
# ==============================
APP_NAME=PyFastAdmin
APP_ENV=dev
APP_PORT=8000
SECRET_KEY=dev-secret-key
ADMIN_USER=admin
ADMIN_PASS=admin123

# 启动编排参数（uv run main.py）
HTTP_WORKERS=1
QUEUE_WORKERS=1
PERIODIC_WORKERS=1
UVICORN_HOST=0.0.0.0
UVICORN_LOG_LEVEL=info
UVICORN_RELOAD=0

# 队列与周期任务参数
QUEUE_MAX_RETRIES=3
QUEUE_BLOCK_MS=1500
LOG_CLEANUP_INTERVAL_SECONDS=3600
LOG_RETENTION_DAYS=30
WORKER_HEARTBEAT_TTL_SECONDS=30

# ==============================
# MongoDB 主库配置（dev/prod 均要求密码）
# ==============================
MONGO_ROOT_USERNAME=pyfastadmin
MONGO_ROOT_PASSWORD=change_me
MONGO_PORT=27017
MONGO_DB=pyfastadmin
MONGO_URL=mongodb://pyfastadmin:change_me@localhost:27017/pyfastadmin?authSource=admin

# ==============================
# Redis 配置（dev/prod 均要求密码）
# ==============================
REDIS_PASSWORD=change_me
REDIS_PORT=6379
REDIS_URL=redis://:change_me@localhost:6379/0

# ==============================
# 测试环境配置（单测 / 集成 / E2E）
# ==============================
TEST_MONGO_URL=mongodb://pyfastadmin:change_me@localhost:27017/?authSource=admin
TEST_MONGO_DB=pyfastadmin_test
TEST_E2E_MONGO_DB=pyfastadmin_e2e_test
TEST_ADMIN_USER=e2e_admin
TEST_ADMIN_PASS=e2e_pass_123

# ==============================
# 备份测试开关（仅 APP_ENV=test/e2e 自动生效）
# 开发环境要强制启用，请设 TEST_BACKUP_USE_ENV=1
# ==============================
TEST_BACKUP_USE_ENV=0
TEST_BACKUP_ENABLED=
TEST_BACKUP_INTERVAL_HOURS=
TEST_BACKUP_LOCAL_DIR=
TEST_BACKUP_LOCAL_RETENTION=
TEST_BACKUP_EXCLUDED_COLLECTIONS=

# ==============================
# 云备份通用配置（不区分云厂商）
# TEST_BACKUP_CLOUD_PROVIDERS 多选，逗号分隔：
#   aliyun_oss,tencent_cos
# ==============================
TEST_BACKUP_CLOUD_ENABLED=
TEST_BACKUP_CLOUD_PROVIDERS=
TEST_BACKUP_CLOUD_PATH=
TEST_BACKUP_CLOUD_RETENTION=

# ==============================
# 阿里云 OSS 配置（当 providers 包含 aliyun_oss 时需要）
# Region 示例：cn-guangzhou（注意：不要写成 oss-cn-guangzhou）
# Endpoint 示例：oss-cn-guangzhou.aliyuncs.com
# ==============================
TEST_BACKUP_OSS_REGION=
TEST_BACKUP_OSS_ENDPOINT=
TEST_BACKUP_OSS_ACCESS_KEY_ID=
TEST_BACKUP_OSS_ACCESS_KEY_SECRET=
TEST_BACKUP_OSS_BUCKET=

# ==============================
# 腾讯云 COS 配置（当 providers 包含 tencent_cos 时需要）
# ==============================
TEST_BACKUP_COS_REGION=
TEST_BACKUP_COS_SECRET_ID=
TEST_BACKUP_COS_SECRET_KEY=
TEST_BACKUP_COS_BUCKET=

# ==============================
# 其他云厂商
# 当前仅支持阿里云 OSS / 腾讯云 COS。
# 如需新增（如 AWS S3 / MinIO），可在此下方补充变量。
# ==============================
